            .nav-arrow
          li(role='presentation', style='width:25%', data-id='indicator')
            .nav-wedge
            a(href='#indicators', data-href='#indicators', role='tab') INDICATOR
            .nav-arrow
          li(role='presentation', style='width:25%', data-id='patient')
            .nav-wedge
            a(href='#patients', data-href='#patients', role='tab') PATIENT
            .nav-arrow
          li(role='presentation', style='width:25%', data-id='actions')
            .nav-wedge
            a(href='#agreedactions', data-href='#agreedactions', role='tab') ACTION PLANS
        ul.nav.navbar-nav.navbar-right
          li#file-loader
            a#dropdownMenu1.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
