  nav.navbar.navbar-default.navbar-fixed-top.hidden-xs(role='navigation')
    .navbar-inner
      .container
        ul#mainTab.nav.nav-tabs.nav-tabs-tall.nav-wizard.pull-left(style='width:1100px', role='tablist')
          li.active(role='presentation', style='width:25%', data-id='overview')
