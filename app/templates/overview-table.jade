.card
  .card-header.card-header-icon(data-background-color="rose")
    i.material-icons assessment
  .card-content#overviewTableCard
    h4.card-title Overview Tables
    small.category An overview list of ***********
    .panel-body.overview-table.wrapper-floatTHead
      table.table.table-hover#overview-table
        thead
          tr
            th.col-md-3 Indicator
            th.col-md-1.text-center Current Performance
            // BG-TODO the below column is new
            th.col-md-1.text-center Actioned Patients
            th.col-md-2.text-center Salford Target
            th.col-md-2.text-center Top 10% Benchmark
            // BB-TODO in dev merge this is "Change from Yesterday"
            th.col-md-1.text-center Daily Trajectory
            th.col-md-2 1 Year Trend
        tbody.ps-child.ps-boilerplate
          - var alt=false
          each indicator in indicators
            tr.standard-row(data-id=indicator.id,class=alt ? 'info': '',data-toggle='tooltip', data-placement='left', title='Click for more detail')
              td.col-md-3
                //td
                strong!= indicator.name
                br
                a.show-more(data-id=indicator.id)
                  | Show more 
                  i.fa.fa-caret-down
              td.col-md-1.text-center
                //td
                //strong(class=indicator.aboveTarget ? 'text-overPerform' : 'text-underPerform')= indicator.performance.percentage + '%'
                if isNaN(indicator.performance.percentage)
                  strong(class = 'text-underPerform') N/A
                else if indicator.aboveTarget
                  if ((indicator.benchmark*100).toFixed(0)) < indicator.performance.percentage
                    strong(class = 'text-topTen')= indicator.performance.percentage + '%'
                  else
                    strong(class = 'text-overPerform')= indicator.performance.percentage + '%'
                else
                  strong(class = 'text-underPerform')= indicator.performance.percentage + '%'
                  
                //strong(class=indicator.aboveTarget ? 'text-overPerform' : 'text-underPerform')= indicator.performance.percentage + '%'
                span= ' (' + indicator.performance.fraction + ')'
              td.col-md-1.text-center= indicator.reviewed + "/" + indicator.patientsWithOpportunity
              td.col-md-2.text-center= indicator.target
              td.col-md-2.text-center= (indicator.benchmark*100).toFixed(0)+"%"
              td.col-md-1.text-center
                //(style="text-align:center")
                //- td= indicator.reviewed + "/" + indicator.patientsWithOpportunity
                //- td= indicator.target
                //- td= (indicator.benchmark*100).toFixed(0)+"%"
                //- td(style="text-align:center")
                if indicator.change==="up"
                  i.material-icons trending_up
                else if indicator.change==="down"
                  i.material-icons trending_down
                else
                  i.material-icons trending_flat
              td.col-md-2
                //td
                span.inlinesparkline= indicator.trend
            tr.show-more-row(style="display: none" data-id=indicator.id,class=alt ? 'info': '' )
              td(colspan='6')!= indicator.description
                  br
                  a.show-more(data-id=indicator.id)
                    | Show less 
                    i.fa.fa-caret-up
            - alt = !alt

