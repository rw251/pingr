// Intro tutorial
ol.tourbus-legs(id='tutorial-intro')
  li(data-el="#tutorial", data-arrow="20%", data-highlight="true", data-orientation="left", data-enable-el="#tutorial", data-width="400")
    a.tourbus-stop.tourbus-exit-icon(href='javascript:void(0);') &#x2716;
    p#tutorialText We have some tutorials - check them out here.
// Data driven tutorials from tutorials.json
each tutorial in tutorials
  ol.tourbus-legs(id='tutorial-' + tutorial.name)
    each stage,i in tutorial.legs
      li&attributes(stage.attributes)
        a.tourbus-stop.tourbus-exit-icon(href='javascript:void(0);') &#x2716;
        h2
          span.sub= (i+1) + '/' + tutorial.legs.length
          = stage.title
        each para in stage.paragraphs
          p!= para
        if(i>0)
          a.tourbus-prev.tourbus-button.btn-warning(href='javascript:void(0);') Back
        if(i<tutorial.legs.length-1)
          // if(!stage.attributes['data-wait-for'])
          a.tourbus-next.tourbus-button.btn-info(href='javascript:void(0);')= 'â–¶ Next: ' + tutorial.legs[i+1].title
        else
          a.tourbus-stop.tourbus-button.btn-info(href='javascript:void(0);') Done!
.tutorial-menu-mask
.tutorial-menu
  h1.tutorial-menu-title Available Tutorials
  ul
    each tutorial in tutorials
      li(data-id=tutorial.name)
        span.tutorial-menu-item-estimated-time!= '&#9716; ' + tutorial.time + ' Minutes'
        h2= tutorial.title
        span.tutorial-menu-item-description= tutorial.description
  button.tutorial-close &#x2716; CLOSE