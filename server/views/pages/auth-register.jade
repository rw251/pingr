include ../partials/head.jade
include ../mixins/email-preferences.jade
.container-wide.starter-template-high(style="background-color: white")
  .btn-toolbar
    a.btn.btn-info(href='/') Back to PINGR
  h1(style="color:#333") Register an account
  - if(message && message.success)
    div.alert.alert-success(role="alert")= message.success
    - if(message.warning)
      div.alert.alert-warning(role="alert")
        strong= message.warning
  - else
    form(action='/register', method='post')
      h3 Your details
      .row
        .col-md-4
          .form-group.input-group
            span.input-group-addon
              i.fa.fa-user
            input.form-control(type='text', name='fullname', placeholder='Full name', required='', autofocus='')
        .col-md-4
          .form-group.input-group
            span.input-group-addon
              i.fa.fa-envelope
            input.form-control(type='text', name='email', placeholder='Email address', required='', autofocus='')
        .col-md-4
          .form-group.input-group
            span.input-group-addon
              i.fa.fa-key
            input.form-control.nomargin(type='password', name='password', placeholder='Password', required='')
      .form-group.input-group
        span.input-group-addon
          i.fa.fa-stethoscope
        select#selPractice.form-control.selectpicker(name='practice', required='',multiple='',title='Select one or more GP practices')
          each practice in practices
            option(value=practice._id+"|"+practice.name)= practice.name
      button.btn.btn-purple.btn-block.history(type='submit')
        | Register 
        span.fa.fa-arrow-circle-right
      - if(message && message.error)
        div.alert.alert-danger(role="alert")= message.error
      hr
      h3 Reminder emails
      p 
        | PINGR can send you emails to highlight patients that may need reviewing. 
        //- a#sampleEmail(href='#',data-toggle="modal" data-target="#myModal") View an example email based on your selections below by clicking here (you'll need to save your changes first).
      hr   
      +email-prefs("Register", false, false, true) 
      - if(message && message.error)
        div.alert.alert-danger(role="alert")= message.error
