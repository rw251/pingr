.panel.panel-default
  .panel-body.pastel-pink
    table.table
      thead
        tr
          th Indicator
          th Current Performance
          th Salford Target
          th Top 10%
          th Change
          th Trend
      tbody
        - var alt=false
        each indicator in indicators
          tr.standard-row(data-id=indicator.id,class=alt ? 'alternate-row': '',data-toggle='tooltip', data-placement='left', title='Click for more detail')
            td
              strong= indicator.name
              br
              a.show-more(data-id=indicator.id)
                | Show more 
                i.fa.fa-caret-down
            td
              strong(class=indicator.aboveTarget ? 'text-success' : 'text-danger')= indicator.performance.percentage + '%'
              span= ' (' + indicator.performance.fraction + ')'
            td= indicator.target
            td= (indicator.benchmark*100).toFixed(0)+"%"
            td
              if indicator.up
                i.fa.fa-2x.fa-caret-up
              else
                i.fa.fa-2x.fa-caret-down
            td
              span.inlinesparkline= indicator.trend
          tr.show-more-row(data-id=indicator.id,class=alt ? 'alternate-row': '')
            td(colspan='6')!= indicator.description
                br
                a.show-more(data-id=indicator.id)
                  | Show less 
                  i.fa.fa-caret-up
          - alt = !alt
